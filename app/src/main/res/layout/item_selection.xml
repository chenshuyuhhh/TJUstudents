<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/select_iv_course"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_coursedetail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/select_tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程号"
            android:textSize="17sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@id/select_iv_course"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/select_iv_course"
            app:layout_constraintBottom_toBottomOf="@id/select_iv_course" />

        <TextView
            android:id="@+id/select_tv_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/select_tv_course"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/select_tv_course"
            app:layout_constraintTop_toTopOf="@+id/select_tv_course"
            tools:text="1"
            android:textSize="19sp"
            />

        <ImageView
            android:id="@+id/select_iv_student"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_studentdetail2"
            app:layout_constraintLeft_toRightOf="@+id/select_iv_course"
            android:layout_marginStart="130dp"
            app:layout_constraintTop_toTopOf="@id/select_iv_course"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/select_iv_course" />

        <TextView
            android:id="@+id/select_tv_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生ID"
            android:textSize="17sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toRightOf="@+id/select_iv_student"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/select_iv_student"
            app:layout_constraintBottom_toBottomOf="@+id/select_iv_student"/>

        <TextView
            android:id="@+id/select_tv_sid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/select_tv_student"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/select_tv_student"
            app:layout_constraintBottom_toBottomOf="@id/select_tv_student"
            tools:text="2"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/select_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年份："
            android:textSize="17dp"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="@+id/select_iv_course"
            app:layout_constraintTop_toBottomOf="@+id/select_iv_student"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"/>

        <TextView
            android:id="@+id/select_tv_year_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorDarkGrey"
            app:layout_constraintLeft_toRightOf="@+id/select_tv_year"
            app:layout_constraintBottom_toBottomOf="@+id/select_tv_year"
            tools:text="2017"/>

        <TextView
            android:id="@+id/select_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成绩："
            android:textColor="@color/colorGrey"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@+id/select_tv_year"
            android:layout_marginStart="104dp"
            app:layout_constraintBottom_toBottomOf="@id/select_tv_year"/>

        <TextView
            android:id="@+id/select_tv_score_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorDarkGrey"
            app:layout_constraintLeft_toRightOf="@id/select_tv_score"
            app:layout_constraintBottom_toBottomOf="@id/select_tv_score"
            tools:text="100"/>

        <ImageView
            android:id="@+id/select_iv_edit"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/ic_select_edit1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/select_iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>