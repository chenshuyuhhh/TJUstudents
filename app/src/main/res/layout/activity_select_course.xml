<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/select_course_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选 课"
        android:textColor="#0E3A5E"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/select_course_tv_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> 选课的课程编号"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/select_course_tv_title"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/select_course_et_cid"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_course_cid_line"
        app:layout_constraintLeft_toLeftOf="@id/select_course_tv_cid"
        app:layout_constraintTop_toBottomOf="@+id/select_course_tv_cid"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/select_course_tv_sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> 选课学生的学号"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/select_course_tv_cid"
        android:layout_marginTop="80dp" />

    <EditText
        android:id="@+id/select_course_et_sid"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_course_cid_line"
        app:layout_constraintLeft_toLeftOf="@id/select_course_tv_sid"
        app:layout_constraintTop_toBottomOf="@+id/select_course_tv_sid"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/select_course_tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> 选课的年份"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/select_course_tv_cid"
        android:layout_marginTop="186dp" />

    <EditText
        android:id="@+id/select_course_et_year"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_course_cid_line"
        app:layout_constraintLeft_toLeftOf="@id/select_course_tv_year"
        app:layout_constraintTop_toBottomOf="@+id/select_course_tv_year"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/select_course_tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> 课程获得分数"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/select_course_tv_cid"
        android:layout_marginTop="286dp" />

    <EditText
        android:id="@+id/select_course_et_score"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_course_cid_line"
        app:layout_constraintLeft_toLeftOf="@id/select_course_tv_score"
        app:layout_constraintTop_toBottomOf="@+id/select_course_tv_score"
        android:layout_marginTop="14dp"/>

    <!--<Button-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:text="确认选课"-->
        <!--android:textColor="@color/colorLogin"-->
        <!--android:textSize="16sp"-->
        <!--android:background="@color/colorLoginWhite"-->
        <!--app:layout_constraintTop_toBottomOf="@id/select_course_et_year"-->
        <!--android:layout_marginTop="20dp"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--android:layout_marginEnd="20dp"/>-->

    <ImageView
        android:id="@+id/select_course_sub"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="确认选课"
        android:textColor="@color/colorLogin"
        android:textSize="16sp"
        android:background="@drawable/ic_sub2"
        app:layout_constraintTop_toBottomOf="@id/select_course_et_score"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="34dp"/>


</android.support.constraint.ConstraintLayout>