    <!--android:textSize="16sp"-->
    <!--android:background="@color/colorLoginWhite"-->
    <!--app:layout_constraintTop_toBottomOf="@id/select_course_et_year"-->
    <!--android:layout_marginTop="20dp"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--android:layout_marginEnd="20dp"/>-->

    <ImageView
        android:id="@+id/course_sub"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textColor="@color/colorLogin"
        android:textSize="16sp"
        android:background="@drawable/ic_sub2"
        app:layout_constraintTop_toBottomOf="@id/select_course_et_cancle"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="34dp"/>

</android.support.constraint.ConstraintLayout>