<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/student_iv_woman"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_student_woman2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"/>

        <ImageView
            android:id="@+id/student_iv_man"
            android:layout_width="27dp"
            android:layout_height="27.8dp"
            android:src="@drawable/ic_student_man"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp"/>

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorDarkGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            tool:text="陈姝宇"/>

        <TextView
            android:id="@+id/student_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorDarkGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toBottomOf="@+id/student_name"
            android:layout_marginTop="8dp"
            tool:text="( ID：1 )"/>

        <TextView
            android:id="@+id/student_tv_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorDarkGrey"
            app:layout_constraintLeft_toRightOf="@+id/student_tv_id"
            android:layout_marginStart="34dp"
            app:layout_constraintTop_toTopOf="@+id/student_tv_id"
            app:layout_constraintBottom_toBottomOf="@+id/student_tv_id"
            tool:text="[ Class : 2 ]"/>

        <!--<TextView-->
            <!--android:id="@+id/student_tv_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="18sp"-->
            <!--android:textColor="@color/colorGrey"-->
            <!--app:layout_constraintLeft_toLeftOf="@+id/student_iv_woman"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/student_iv_woman"-->
            <!--android:layout_marginTop="12dp"-->
            <!--tool:text="学号：1"/>-->

        <TextView
            android:id="@+id/student_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toBottomOf="@+id/student_iv_woman"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="48dp"
            tool:text="入学年龄：18岁 " />

        <TextView
            android:id="@+id/student_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/student_tv_age"
            app:layout_constraintBottom_toBottomOf="@id/student_tv_age"
            tool:text="入学年份：2017年"/>

        <ImageView
            android:id="@+id/student_iv_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/student_name"
            app:layout_constraintBottom_toBottomOf="@id/student_name"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/student_iv_edit"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_course_edit2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/student_name"
            app:layout_constraintBottom_toBottomOf="@id/student_name"
            android:layout_marginEnd="60dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>