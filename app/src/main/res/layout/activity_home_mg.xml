<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLoginWhite"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_mg_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage"
                android:textSize="22sp"
                android:typeface="sans"
                android:textColor="@color/colorLoginWhite"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_loginout"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_loginout"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>


    <!--<TextView-->
        <!--android:id="@+id/search_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/home_mg_tb"/>-->
    <ImageView
        android:id="@+id/home_mg_iv_course"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_course"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/home_mg_tb"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/home_mg_tv_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程信息"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@+id/home_mg_iv_course"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/home_mg_iv_course"
        app:layout_constraintRight_toRightOf="@id/home_mg_iv_course"/>

    <ImageView
        android:id="@+id/home_mg_iv_select"
        android:layout_width="65dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_select2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/home_mg_iv_course"
        app:layout_constraintBottom_toBottomOf="@+id/home_mg_iv_course" />

    <TextView
        android:id="@+id/home_mg_tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选课信息"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@+id/home_mg_iv_select"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="@id/home_mg_iv_select"
        app:layout_constraintRight_toRightOf="@id/home_mg_iv_select"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:id="@+id/home_mg_iv_student"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_student"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/home_mg_tb"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/home_mg_tv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生信息"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@+id/home_mg_iv_student"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/home_mg_iv_student"
        app:layout_constraintRight_toRightOf="@id/home_mg_iv_student"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_mg_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_mg_tv_student"
        android:layout_marginTop="25dp">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>